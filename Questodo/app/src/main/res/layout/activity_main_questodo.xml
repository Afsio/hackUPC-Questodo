<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="14"
    android:background="@mipmap/background">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:weightSum="5">

        <Button
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/add"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/buttonAddProj"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_weight="4">


            <TextView
                android:layout_marginBottom="10dp"
                android:text="Add new project"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:background="@color/light2"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="30sp"
                android:ems="10"
                android:id="@+id/editType"
                android:layout_gravity="center_horizontal"/>

        </FrameLayout>

    </LinearLayout>


    <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:weightSum="7">
            <Button
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/button2"
                android:layout_weight="6" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/progressBar6"
                android:layout_weight="3" />

        </LinearLayout>

    <Space
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@mipmap/back2"
        android:layout_height="0dp"
        android:weightSum="5">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:weightSum="3">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:id="@+id/profileQu"
                android:background="@mipmap/smiley" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:text="level name"
                android:textSize="25dp"
                android:textColor="#e0b300"
                android:textStyle="italic|bold"
                android:layout_weight="2"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>