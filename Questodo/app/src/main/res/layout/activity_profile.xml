<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@mipmap/background"
        android:weightSum="15">

        <LinearLayout
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@mipmap/back2"
            android:layout_height="0dp"
            android:weightSum="5">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="3">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@mipmap/smiley"
                    android:id="@+id/backButtonPr"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="level name"
                    android:textSize="25dp"
                    android:textColor="#e0b300"
                    android:textStyle="italic|bold"
                    android:layout_weight="2"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="vertical"
            android:layout_weight="8"
            android:weightSum="5"
            android:background="#502d16">

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:weightSum="7">

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/edit"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:id="@+id/button1"
                    android:layout_weight="1" />

                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6">


                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/light2"
                        android:text="NAME:" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:weightSum="7">

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/edit"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:id="@+id/button2"
                    android:layout_weight="1" />

                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6">

                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="AGE:"
                        android:background="@color/light2"
                        android:id="@+id/textView" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:weightSum="7">

                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="50dp"
                    android:textAlignment="center"
                    android:textColor="#e0b300"
                    android:textStyle="italic|bold"
                    android:shadowColor="#ffffff"/>

                <FrameLayout
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6">


                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="LEVEL:"
                        android:background="@color/light2" />

                </FrameLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_weight="1"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="0sp">

                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <Button
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_margin="10sp"
                    android:id="@+id/archiButtonPr"
                    android:layout_height="match_parent"
                    android:background="@mipmap/achivement"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>